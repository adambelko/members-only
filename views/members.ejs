<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Members Only App</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-wrapper">
        <a href="/"><h1 class="navbar-title">Members Only</h1></a>
        <div class="navbar-btn-wrapper">
          <% if (user) { %>
            <a href="/log-out"><button class="navbar-btn btn">Log Out</button></a>
          <% } else { %>
            <a href="/log-in"><button class="navbar-btn btn">Log In</button></a>
            <a href="/sign-up"><button class="navbar-btn btn">Sign Up</button></a>
          <% } %>
        </div>
      </div>
    </nav>
    <main class="main">
        <div class="main-new-message">
          <h2>New Message</h2>
            <form action="" method="POST" class="main-form">
              <div class="form-section">
                <label for="messagetitle">Title:</label>
                <input name="messagetitle"type="text" />
              </div>
              <div class="form-section">
                <label for="messagebody">Message:</label>
                <input name="messagebody" type="text" />
              </div>
              <button class="form-btn btn">Send</button>
            </form>
          </div>
        </div>
        <div class="message-board">
          <% messages.forEach((message) => { %>
            <div class="message-board-message">
              <span>User: <%= message.author.username %></span>
              <span>Title: <%= message.title %></span>
              <span>Message: <%= message.body %></span>
              <span>Date: <%= message.timestamp %></span>
            </div>
          <% }) %>
        </div>
    </main>
  </body>
</html>